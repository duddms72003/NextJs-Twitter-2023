generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String?  @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // tokens    Token[]
  tweets    Tweet[]
  fav       Fav[]
}

